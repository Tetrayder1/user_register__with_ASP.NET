@{
    ViewData["Title"] = "Role Create";
}

@if (TempData["role"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["role"]
    </div>
}
@model RoleCreateModelDTO

<div asp-validation-summary="ModelOnly" class="alert alert-primary" role="alert"></div>

<form asp-controller="role" asp-area="admin" asp-action="rolecreate" method="post">
    <div class="mb-3">
        <label for="Name" asp-for="Name" class="form-label"></label>
        <input class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

