@{
    ViewData["Title"] = "Role Create";
}

@if (TempData["role"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["role"]
    </div>
}
@model UpdateRoleDTO

<div asp-validation-summary="ModelOnly" class="alert alert-primary" role="alert"></div>

<form asp-controller="role" asp-area="admin" asp-action="roleupdate" method="post">
    <div class="mb-3">
        <label for="Name" asp-for="Name" class="form-label"></label>
        <input value="@Model.Name" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
        <p>@Model.Name</p>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}