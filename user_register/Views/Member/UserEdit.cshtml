

@{
    ViewData["Title"] = "User Update";
}


@model user_register.core.ViewModels.UserUpdateViewModel
<div class="row">

    <div asp-validation-summary="ModelOnly" class="alert alert-primary" role="alert"></div>

    <div class="col-md-6 offset-md-3">

        <h1>SignUp</h1>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="UserName" class="col-md-4 col-form-label" asp-for="UserName"></label>
                <div class="col-md-8">
                    <input asp-for="UserName" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label for="Phone" class="col-md-4 col-form-label" asp-for="Phone"></label>
                <div class="col-md-8">
                    <input asp-for="Phone" class="form-control">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label for="City" class="col-md-4 col-form-label" asp-for="City"></label>
                <div class="col-md-8">
                    <input asp-for="City" class="form-control">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label for="PictureUser" class="col-md-4 col-form-label" asp-for="PictureUser"></label>
                <div class="col-md-8">
                    <input class="form-control" type="file" asp-for="PictureUser">
                    <span asp-validation-for="PictureUser" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label for="BirthDate" class="col-md-4 col-form-label" asp-for="BirthDate"></label>
                <div class="col-md-8">
                    <input asp-for="BirthDate" class="form-control">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label for="Gender" class="col-md-4 col-form-label" asp-for="Gender"></label>
                <div class="col-md-8">
                    <select type="radio" asp-for="Gender" class="form-control" asp-items="ViewBag.genderList">
                        <option value="">Choose a gender</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Qeyd Et</button>
        </form>
    </div>
</div>