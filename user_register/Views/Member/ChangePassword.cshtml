@{
    ViewData["Title"] = "Change Password";
}
@model user_register.core.ViewModels.PasswordChangeViewModel1
<div asp-validation-summary="ModelOnly" class="alert alert-primary" role="alert"></div>

<h1>Reset Password</h1>
<form asp-controller="Member" asp-action="ChangePassword" method="post">
    <div class="mb-3">
        <label for="Password" asp-for="Password" class="form-label">Password</label>
        <input type="password" asp-for="Password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="NewPassword" asp-for="NewPassword" class="form-label"></label>
        <input type="password" asp-for="NewPassword" class="form-control">
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="PasswordConfirm" asp-for="PasswordConfirm" class="form-label"></label>
        <input type="password" asp-for="PasswordConfirm" class="form-control">
        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
    </div>
    <button type="submit"
            class="btn btn-primary">
        Reset Password
    </button>
</form>

